<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gibbets"
    android:baselineAligned="true"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="paulina.project.RootActivity">

    <Button
        android:id="@+id/imageButton2"
        android:layout_width="268dp"
        android:layout_height="101dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:ellipsize="marquee"
        android:onClick="startOnePlayerMode"
        android:scaleType="fitXY"
        android:shadowColor="@color/common_signin_btn_light_text_default"
        android:src="@drawable/button"
        android:text="START GAME"
        android:textAlignment="center"
        android:textAppearance="@color/common_signin_btn_default_background"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/bluetooth_button_teacher"
        android:layout_width="268dp"
        android:layout_height="101dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:ellipsize="marquee"
        android:scaleType="fitXY"
        android:shadowColor="@color/common_signin_btn_light_text_default"
        android:src="@drawable/button"
        android:text="BE A TEACHER"
        android:onClick="connectViaBluetooth"
        android:textAlignment="center"
        android:textAppearance="@color/common_signin_btn_default_background"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bluetooth_button_student"
        android:layout_width="268dp"
        android:layout_height="101dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:ellipsize="marquee"
        android:scaleType="fitXY"
        android:shadowColor="@color/common_signin_btn_light_text_default"
        android:src="@drawable/button"
        android:text="BE A STUDENT"
        android:onClick="connectViaBluetooth"
        android:textAlignment="center"
        android:textAppearance="@color/common_signin_btn_default_background"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        android:textStyle="bold" />
</LinearLayout>
